<li class="poster">
    <div class="poster__img-wrap">
        <img src="https://image.tmdb.org/t/p/w500{{poster_path}}" data-compare="{{poster_path}}" alt="movie-poster"
            class="poster__img" width="274">
    </div>
    <div class="poster__content-wrap">
        <h3 class="poster__movie-name">{{original_title}}</h3>
        <div class="poster__movie-info-wrap">
            <ul class="poster__genre-list list">
                {{#each genre_ids}}
                <li class="poster__genre-item">
                    {{this}}<span>,&nbsp;</span><span>&nbsp;&nbsp;|&nbsp;&nbsp;{{release_date}}</span></li>
                {{/each}}
                <p>&nbsp| {{release_date}}</p>
            </ul>
        </div>
    </div>
</li>